<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM  "https://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="ConsoleAppender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd-MM-yyyy HH:mm:ss,SSS} [%-5p] [%t] %c.%M (%L): %m\n"/>
		</layout>
	</appender>

	<logger name="TEST_PRODUCT">
		<level value="DEBUG" />
	</logger> 
	<root>
		<priority value="info"/>
    	<appender-ref ref="ConsoleAppender"/>
	</root> 
	
</log4j:configuration>
